@model List<DinnerBooking.Data.Entities.Cuisine>

@foreach (var cuisine in Model)
{
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            @*<img src="http://lorempixel.com/200/200/food/@cuisine.Id">*@
            <div style="background-size: cover; background-image: url(&quot;http://lorempixel.com/200/200/food/@cuisine.Id&quot;); background-position: center center;">
                <div class="container cuisineCounter" style="width: 100%; height: 371px;">
                    @if (cuisine.Count > 2)
                    {
                        <span style="font-size: 26px; color: white; filter: drop-shadow(Darkgreen 2px 2px 1px);">
                            仲有<span class="count">@cuisine.Count</span> 份
                        </span>
                    }
                    else if (cuisine.Count > 0)
                    {
                        <span style="font-size: 26px; color: white; filter: drop-shadow(red 2px 2px 1px);">
                            <i aria-hidden="true" class="v-icon glyphicon glyphicon-warning-sign theme--light white--text" style="font-size: 36px;"></i>
                            得番<span class="count">@cuisine.Count</span> 份
                        </span>
                    }
                    else
                    {
                        <span style="font-size: 26px; color: white; filter: drop-shadow(grey 2px 2px 1px);">
                            <i aria-hidden="true" class="v-icon  glyphicon glyphicon-remove-circle theme--light white--text" style="font-size: 36px;"></i>
                            冇晒喇
                        </span>
                    }
                </div>
            </div>
            <div class="caption">
                <span style="color: #9e9e9e; font-size: 25px;">$@cuisine.Price</span>
                <br />
                <span style="font-size:30px">@cuisine.Name</span>
                <br />
                <span style="font-size: 18px;">@cuisine.Detail</span>
            </div>
            <div>
                @if (cuisine.Count > 0)
                {
                <button style="width: 100%" class="btn btn-success btnPurchase" data-id="@cuisine.Id" role="button">
                    <span style="font-size: 20px; font-weight:bold">買</span>
                    <span style="padding:0 40%;"></span>
                    <i class="glyphicon glyphicon-shopping-cart" style="font-size: 20px;"> </i>
                </button>
                }
                else
                {
                    <button style="width: 100%" class="btn btn-success btnPurchase" data-id="@cuisine.Id" role="button" disabled>
                        <span style="font-size: 20px; font-weight:bold">買</span>
                        <span style="padding:0 40%;"></span>
                        <i class="glyphicon glyphicon-shopping-cart" style="font-size: 20px;"> </i>
                     </button>
                }
            </div>
        </div>
    </div>
}